; |admiring Kim we arise| - robust if no comma
aj-hd_scp_c := adjh_s_rule &
  [ RNAME mhs,
    NH-DTR.SYNSEM.PUNCT.RPUNCT comma_punct ].

aj-hd_scp-lex_c := adjh_s_rule &
  [ RNAME mhs,
    NH-DTR.SYNSEM [ PUNCT.RPUNCT pair_or_no_punct,
                    LEX + ] ].

aj-hd_scp_c_rbst := adjh_s_rule &
  [ RNAME mhs,
    NH-DTR.SYNSEM [ PUNCT.RPUNCT pair_or_no_punct,
                    LEX - ],
    HD-DTR.SYNSEM.LEX -,
    GENRE robust ].

