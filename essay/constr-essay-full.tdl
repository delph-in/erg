;; Treat comma-spliced sentences as robust
cl-cl_runon-cma_c_rbst := run_on_coord_comma_rule &
  [ ARGS < [ SYNSEM.LEX - ], 
	   [ SYNSEM [ LEX -,
		      MODIFD notmod_or_rmod,
		      LOCAL.CONT.HOOK.INDEX.SF prop ] ] >,
    RNAME snsc,
    GENRE robust ].

;; Also treat all runons with period as robust, but not semicolons

cl-cl_runon_c := run_on_coord_rule &
  [ ARGS.FIRST.SYNSEM.PUNCT.RPUNCT semicol_punct,
    RNAME sns ].

cl-cl_runon_c_rbst := run_on_coord_rule &
  [ ARGS.FIRST.SYNSEM.PUNCT.RPUNCT clause_punct,
    RNAME snsp,
    GENRE robust ].

