  +OUTPUT < [ +TRAIT [ +LD bracket_nonnull & <! npnm, npnm !>,
		       +RD bracket_list ] ],
            [ +TRAIT [ +LD bracket_null & <! !>, 
		       +RD bracket_nonnull & <! npnm !> ] ],
            [ +TRAIT [ +RD bracket_nonnull & <! npnm !> ] ] > ].

