;;; Identifiers used in Sciborg
^([\(]*)[?][/][b][0-9]{6}[a-z]([.?!,;":\)]*)	\1IdentifierErsatz\2

;;; |an 800m hill|
;;;
^~?([\(]*)[0-9]+([m'"]|cm|mm|σ)([.?!,;":\)]*)	\1MeasNPErsatz\3
^~?([\(]*)[0-9]+[Kk][m]([.?!,;":\)]*)		\1MeasNPErsatz\2
