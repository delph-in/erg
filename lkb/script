(time (let ((data-dir1 (make-pathname :directory 
                                '(:absolute "eo" "e1" "users" "dan" 
                                                           "grammar" "lkb")))
            (data-dir2 (make-pathname :directory 
                                '(:absolute "eo" "e1" "users" "dan"
                                                           "grammar")))
            (ok t))
   (setf *lkb-system-version* :page)
   (load (merge-pathnames
         (make-pathname :name "globals.lsp")
         data-dir1))
   (load (merge-pathnames
